<!DOCTYPE html>
<head>
  <title>您的掛號紀錄｜台北市立聯合醫院</title>
  <%- include('../utils/_head') %>
  <link rel='stylesheet' href='/stylesheets/query_reg/query_result.css' />
  <script src="/javascripts/query_reg/query_result.js"></script>
</head>
<body>
  <%- include('../components/header') %>
  <%- include('../components/top-deco') %>
  <div class="container-fluid my-5">
    <div class="container text-center text-md-left">
      <h2 class="mb-5">您的掛號紀錄</h2>
      <div class="row">
        <div class="col-12 col-md-7">
          <% if (regs.length == 0) { %> <h4 class="fg-warn"> <%= patient_id %> 查無掛號紀錄</h4> <% } %>
          <% regs.forEach((reg, i) => { %>
          <div class="reg_record__card<% if (i != 0) { %> mt-3<% } %>">
            <div class="rr_card__header">民國 <%= reg.reg_date[0] %> 年 <%= reg.reg_date[1] %> 月 <%= reg.reg_date[2] %> 日<br class="d-sm-none"><span class="d-none d-sm-inline">　　</span>上午診</div>
            <div class="rr_card__body">
              <div class="row">
                <div class="col-12 col-md-4 d-flex align-items-center">
                  <h5 class="mb-0 w-100"><%= reg.hosp_name %>  <%= reg.dept_name %></h5>
                </div>
                <div class="col-12 col-md-4 mt-2 mt-md-0 d-flex align-items-center">
                  <h5 class="mb-0 w-100">診間 <span class="fg-warn"><%= reg.sect_no %></span></h5>
                </div>
                <div class="col-12 col-md-4 mt-2 mt-md-0">
                  <button type="button" class="tpech__btn_popping w-100">看診進度</button>
                </div>
              </div>
              <div class="row mt-3">
                <div class="col-12 col-md-4 d-flex align-items-center">
                  <h5 class="mb-0 w-100"><%= reg.dr_name %> 醫師</h5>
                </div>
                <div class="col-12 col-md-4 mt-2 mt-md-0 d-flex align-items-center">
                  <h5 class="mb-0 w-100">看診序號 <span class="fg-warn"><%= reg.reg_no %></span></h5>
                </div>
                <div class="col-12 col-md-4 mt-2 mt-md-0">
                  <button
                    type="button"
                    class="tpech__btn_popping w-100"
                    data-toggle="modal"
                    data-target="#modal-confirm-cancel"
                    data-regid="<%= reg.reg_id %>">取消掛號</button>
                </div>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
        <div class="col-12 col-md-5 d-flex align-items-end">
          <button id="query_result__leave" type="button" class="tpech__btn_popping mx-auto mb-1 mt-4 mt-md-0">離開查詢</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="modal-confirm-cancel" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content p-5" style="background-color: #F6F6F6;">
        <div class="modal-body">
          <p class="d-none" id="modal__reg_id"></p>
          <div class="row">
            <div class="col-12">
              <h5 class="text-center mb-5">確定要取消掛號嗎</h5>
            </div>
            <div class="col-6 d-flex justify-content-center">
              <button class="tpech__btn_popping" id="modal__confirm">是</button>
            </div>
            <div class="col-6 d-flex justify-content-center">
              <button class="tpech__btn_popping" data-dismiss="modal" aria-label="Close">否</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include('../components/bottom-deco') %>
  <%- include('../components/footer') %>
  <%- include('../utils/_foot') %>
</body>
</html>